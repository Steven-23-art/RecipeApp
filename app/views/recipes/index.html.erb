<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.description %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= image_tag recipe.image.url, class: "recipe-show" if recipe.image? %></td>
        <% if recipe.image? %>
      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
    <% end %>
    <ul>
        <li><%= recipe.title %></li>
        <li><%= recipe.description %></li>
        <li><%= link_to 'Show', recipe %> |
        <%= link_to 'Edit', edit_recipe_path(recipe) %> 
      <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
        </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>


<div class="col-md-4">
  <div class="recipe-box">
    
  </div><!-- /recipe-box-->
</div><!--col-md-4-->